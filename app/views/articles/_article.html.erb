<div class="card">
  <div class="card-header">
    <h4><%= article.title %></h4>
    <% article.tags.each do |tag| %>
      <span class="badge badge-info"><%= tag.name %></span>
    <% end %>
    <p class="card-text"><%= article.url %></p>
  </div>
  <div class="card-body">
    <p class="card-text"><%= simple_format(article.body) %></p>
    <p class="text-right font-weight-bold mr-10"><%= article.name %></p>
  </div>
</div>

<div class="p-comment__list">
  <div class="p-comment__listTitle">コメント</div>
  <%= render @article.comments %>
</div> 
